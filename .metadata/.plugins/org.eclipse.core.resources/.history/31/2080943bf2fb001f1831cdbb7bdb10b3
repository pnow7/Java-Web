package practice.sec07;

import java.util.Scanner;
public class PPractice4 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in); 
		
		int[] com = {(int)Math.random()*3, (int)Math.random()*3, (int)Math.random()*3};

		System.out.println("가위 바위 보 입력 : ");	
		String man = sc.nextLine();
		String com1;
		
		if(com.equals(0)) {
			com1 = "가위";
		}
		else if(com.equals(1)) {
			com1 = "바위";
		}
		else {
			com1 = "보";
		}
		
		
		switch(man) {
		case "가위":
			switch(com1) {
			case "가위":
				System.out.println("첫번재 사람 : "+a[0]+" 두번째 사람 : "+a[1]+" 결과 : 비김");
				break;
			case "바위":
				System.out.println("첫번재 사람 : "+a[0]+" 두번째 사람 : "+a[1]+" 결과 두번재 사람이 이김");
				break;

package practice.sec07;

import java.util.Scanner;
public class PPractice4 {

	public static void main(String[] args) {
		Scanner sc; 
		
		String[] a = new String[2];
		for(int i = 0; i < 2; i++) {
			System.out.println((i+1)+"번째 사람 입력 : ");
			sc = new Scanner(System.in);
			a[i] = sc.nextLine();
		}
		switch(a[0]) {
		case "가위":
			switch(a[1]) {
			case "가위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"비김");
			case "바위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"두번재 사람이 이김");
			case "보":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"첫번재 사람이 이김");
			}
		case "바위":
			switch(a[1]) {
			case "가위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"첫번째 사람이 이김");
			case "바위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"비김");
			case "보":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"두번재 사람이 이김");
			}
		case "보":
			switch(a[1]) {
			case "가위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"두번재 사람이 이김");
			case "바위":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"첫번재 사람이 이김");
			case "보":
				System.out.println("첫번재 사람"+a[0]+"두번째 사람"+a[1]+"비김");
			}
		}
		
	}

}
